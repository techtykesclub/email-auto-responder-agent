{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",        // <- use "node" (safe on Vercel)
    "strict": true,
    "types": ["node"],                  // <- lets TS know about `process`
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },
  "include": ["api/**/*.ts", "data/**/*.ts"]
}